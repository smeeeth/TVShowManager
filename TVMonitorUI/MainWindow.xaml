<Window x:Class="TVMonitorUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVMonitorUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBar Name="MyToolbar" VerticalAlignment="Top" >
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="Load File" Click="LoadFile_Click"/>
                </MenuItem>
            </Menu>
            <Button Background="LightSkyBlue" Content="Exit" Name="ExitButton" Click="ExitButton_Click" />
        </ToolBar>
        <DataGrid ItemsSource="{Binding Source=Processor.MainTable}"  AutoGenerateColumns="True">
        </DataGrid>
    </Grid>
</Window>

<Window x:Class="TVMonitorUI.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVMonitorUI"
        mc:Ignorable="d"
        Title="InputDialog" SizeToContent="WidthAndHeight" MinHeight="130" MinWidth="400">
    <StackPanel Margin="10">
        <StackPanel.Resources>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="Margin" Value="0,10,0,0"/>
            </Style>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="10,10,10,10"/>
            </Style>
        </StackPanel.Resources>
        <TextBlock Text="Enter your Rapid API key:" />
        <TextBox x:Name="ResponseTextBox" MaxWidth="400"/>
        <Button Content="OK" Click="OKButton_Click"  MaxWidth="100"/>
    </StackPanel>
</Window>
